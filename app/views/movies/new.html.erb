<%= form_for @movie do |f| %>
  <label>
    Title
    <%= f.text_field :title %>
  </label>
  
  <label>
    Release Year
    <%= f.select :release_year, (1900..2009).to_a.map(&:to_s) %>
  </label>
  
  <% @genres.each do |genre| %>
    <label>
      <%=h genre.name %>
      <%= check_box_tag "genres[]", genre.id %>
    </label>
  <% end %>
  
  <%= f.submit "Save"   %>
<% end %>